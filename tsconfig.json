{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "types": ["node", "dotenv"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
